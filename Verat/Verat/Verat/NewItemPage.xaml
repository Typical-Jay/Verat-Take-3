<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Verat.NewItemPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Gray">
            <Label Text="New Item"
               HorizontalOptions="Center"
               Margin="0,0,0,0"
               Font="Bold"
               FontSize="45" 
               TextColor="#A9664C"
               HeightRequest="80"/> 
            <Editor FontSize="30"
               Margin="14,0,14,0"
               TextColor= "#A9664C"
               x:Name="NameTextEditor"/>
            <Button Text="Add"
               Margin="14,0,14,0"
               BackgroundColor="#A9664C"
               TextColor="Gray"
               Clicked="Button_Clicked"
               FontSize="24"/>
            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>