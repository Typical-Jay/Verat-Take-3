<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Verat.NewItemPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Gray">
            <Label Text="New Item"
               HorizontalOptions="Center"
               Margin="0,0,0,0"
               Font="Bold"
               FontSize="60" 
               TextColor="Coral"
               HeightRequest="80"/> 
            <Editor FontSize="30"
               TextColor="Coral" 
               x:Name="NameTextEditor"/>
            <Button Text="Add"
               BackgroundColor="Coral"
               TextColor="Gray"
               Clicked="Button_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>